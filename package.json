{
	"name": "cydran",
	"version": "0.0.42",
	"description": "Unobtrusive Javascript presentation framework",
	"main": "dist/cydran.js",
	"types": "dist/cydran.d.ts",
	"vars": {
		"mocha": {
			"args": " --recursive -r ts-node/register -r tsconfig-paths/register src/*.spec.ts src/**/*.spec.ts"
		},
		"typedoc": {
			"args": "--mode modules --excludeExternals --excludePrivate --exclude '**/*+(logger|decorator|messaging|error)/**/*.ts' --out dist/docs src"
		},
		"terser": {
			"args": "--comments /^!/ --ecma 5 --compress --keep-fnames -o dist/cydran.min.js"
		},
		"nyc": {
			"args": "--reporter=html --reporter=text --reporter=text-summary"
		},
		"webpack": {
			"dev": "--config webpack.dev.js",
			"prod": "--config webpack.prod.js"
		}
	},
	"scripts": {
		"start": "webpack -w --config webpack.dev.js",
		"build.dev": "npm run lint && npm run test && webpack $npm_package_vars_webpack_dev && rimraf dist/src",
		"build.release": "npm run lint && npm run test.coverage && webpack $npm_package_vars_webpack_prod && rimraf dist/src",
		"cut.release": "npm run build.release && standard-version",
		"build.all": "npm run build.release && npm run docs",
		"clean": "rimraf dist && rimraf coverage",
		"test": "mocha $npm_package_vars_mocha_args",
		"test.coverage": "npm run clean && nyc $npm_package_vars_nyc_args mocha $npm_package_vars_mocha_args",
		"lint": "tslint --project .",
		"minify": "terser dist/cydran.js $npm_package_vars_terser_args",
		"docs": "rimraf dist/docs && typedoc $npm_package_vars_typedoc_args"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cydran/cydran.git"
	},
	"keywords": [
		"MVVM",
		"components",
		"component",
		"framework"
	],
	"author": "The Cydran team",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/cydran/cydran/issues"
	},
	"homepage": "https://github.com/cydran/cydran",
	"devDependencies": {
		"@babel/core": "7.7.5",
		"@babel/preset-env": "7.7.6",
		"@types/chai": "4.2.7",
		"@types/jsdom": "^12.2.4",
		"@types/lodash": "4.14.149",
		"@types/mocha": "^5.2.7",
		"babel-loader": "8.0.6",
		"chai": "4.2.0",
		"compression-webpack-plugin": "3.0.1",
		"dts-bundle-generator": "3.3.1",
		"fs": "0.0.2",
		"jsdom": "15.2.1",
		"mocha": "6.2.2",
		"nyc": "14.1.1",
		"raw-loader": "4.0.0",
		"rimraf": "3.0.0",
		"standard-version": "7.0.1",
		"terser": "4.4.3",
		"terser-webpack-plugin": "2.3.1",
		"ts-loader": "6.2.1",
		"ts-mockito": "^2.5.0",
		"ts-node": "8.5.4",
		"tsconfig-paths": "3.9.0",
		"tslint": "5.20.1",
		"typedoc": "0.15.5",
		"typescript": "3.7.3",
		"webpack": "4.41.3",
		"webpack-cli": "3.3.10",
		"webpack-merge": "4.2.2",
		"webpack-node-externals": "1.7.2"
	},
	"dependencies": {}
}
