{
	"name": "cydran",
	"version": "0.0.24",
	"description": "Unobtrusive Javascript presentation framework",
	"main": "dist/cydran.js",
	"types": "dist/cydran.d.ts",
	"scripts": {
		"start": "node fuse",
		"build": "node fuse build && npm run minify",
		"releaseBuild": "npm run test && npm run lint && node fuse release",
		"clean": "node fuse clean",
		"test": "mocha './src/**/*.spec.ts'",
		"lint": "tslint --project .",
		"minify": "uglifyjs dist/cydran.js --keep-fnames -o dist/cydran.semi-min.js",
		"docs": "typedoc --mode modules --excludeExternals --excludePrivate --exclude '**/*+(logger|decorator|messaging)/**/*.ts' --out dist/docs src"
	},
	"mocha": {
		"diff": true,
		"extension": [
			".tsx",
			".ts",
			".js"
		],
		"require": [
			"ts-node/register"
		],
		"opts": false,
		"reporter": "spec",
		"slow": 75,
		"timeout": 2000,
		"ui": "bdd",
		"watch-files": [
			"src/**/*.spec.ts"
		],
		"watch-ignore": [
			"lib/vendor",
			"node_modules/"
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cydran/cydran.git"
	},
	"keywords": [
		"MVVM",
		"components",
		"component",
		"framework"
	],
	"author": "The Cydran team",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/cydran/cydran/issues"
	},
	"homepage": "https://github.com/cydran/cydran",
	"devDependencies": {
		"@types/chai": "4.2.4",
		"@types/jsdom": "12.2.4",
		"@types/mocha": "5.2.7",
		"@types/node": "12.12.3",
		"chai": "4.2.0",
		"dts-bundle-generator": "3.2.0",
		"dts-generator": "3.0.0",
		"fuse-box": "3.7.1",
		"fuse-test-runner": "1.0.16",
		"jsdom": "15.2.0",
		"mocha": "6.2.2",
		"terser": "4.3.9",
		"ts-node": "8.4.1",
		"tslint": "5.20.0",
		"typedoc": "0.15.0",
		"typescript": "3.6.4",
		"uglify-js": "3.6.5"
	},
	"dependencies": {}
}
