{
	"compilerOptions": {
		"baseUrl": "./src",
		"module": "commonjs",
		"target": "es5",
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"declaration": true,
		"outDir": "./dist/src/",
		"lib": [
			"es5",
			"DOM"
		]
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.d.ts"
	],
	"exclude": [
		"lib",
		"./src/**/*.spec.ts"
	]
}
